<% if book.favorited_by?(current_user) %>
  <%= link_to book.favorites.count, book_favorite_path(book), method: :delete, remote: true, class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to book.favorites.count, book_favorite_path(book), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>