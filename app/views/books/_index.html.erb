<table class="table table-bordered table-dark">
  <h2>投稿数の前日比・前週比</h2>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><strong>今日の投稿数</strong></th>
      <th scope="col">前日の投稿数</th>
      <th scope="col">前日比</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><i class="fas fa-balance-scale fa-lg"></i></th>
      <td><%= @today_book_count %></td>
      <td><%= @yesterday_book_count %></td>
      <td><%= @yesterday_book_percent %>%</td>
    </tr>
</table>


